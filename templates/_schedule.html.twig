<p>{{ "now"|format_datetime('medium', 'none') }}</p>
{% if restaurant.openToday %}
	<p>{% trans %}info.open{% endtrans %}</p>
	{% if restaurant.noonServiceToday and restaurant.eveningServiceToday %}
		<p>
			{% trans %}info.from{% endtrans %}
			{{ restaurant.getStartNoonServiceSchedule }}
			{% trans %}info.to{% endtrans %}
			{{ restaurant.getEndNoonServiceSchedule }}
			{% trans %}info.andf{% endtrans %}<br class="lg:hidden">
			{{ restaurant.getStartEveningServiceSchedule }}
			{% trans %}info.to{% endtrans %}
			{{ restaurant.getEndEveningServiceSchedule }}
		</p>
	{% elseif restaurant.noonServiceToday %}
		<p>
			{% trans %}info.onlf{% endtrans %}
			{{ restaurant.getStartNoonServiceSchedule }}
			{% trans %}info.to{% endtrans %}
			{{ restaurant.getEndNoonServiceSchedule }}
		</p>
	{% elseif restaurant.eveningServiceToday %}
		<p>
			{% trans %}info.onlf{% endtrans %}
			{{ restaurant.getStartEveningServiceSchedule }}
			{% trans %}info.to{% endtrans %}
			{{ restaurant.getEndEveningServiceSchedule }}
		</p>
	{% endif %}
{% else %}
	<p>{% trans %}info.clos{% endtrans %}</p>
{% endif %}
<a href="{{ path('app_home_schedule') }}" class="textLink">{% trans %}info.schd{% endtrans %}</a>