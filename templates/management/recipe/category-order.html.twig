{% block javascripts %}
	{{ encore_entry_script_tags('cat') }}
{% endblock %}

<div hx-target="this" hx-swap="outerHTML">

	<div class="hidden">
		{% for category in categories %}
			<span class="cat">{{ category.name }}</span>
		{% endfor %}
	</div>

	{{ include('_back-button.html.twig', {
		path: path('app_management_recipe'),
	}) }}

	<div class="border border-2 border-secondary p-2 mb-6 rounded">

		<div class="textH2 mb-4">Ordre des cat√©gories</div>

		<ul class="drag-ul"></ul>

		<form hx-post="{{ path('app_management_reorder_category') }}">

		{{ form_start(form) }}
		<div class="hidden">
			{{ form_row(form.categories) }}
		</div>
		<div class="flex justify-end items-center">
			<button class="btn-icon-left">
				Enregistrer <span class="material-symbols-rounded button-icon">Save</span>
			</button>
		</div>
		{{ form_end(form) }}
		</form>
	</div>

</div>
