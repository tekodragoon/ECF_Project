<form
		hx-post="{{ path('app_management_add_category') }}"
		hx-target="#category-gestion"
		hx-swap="outerHTML"
		class="grid grid-cols-8 items-center gap-4 mb-2">

	{{ form_start(form) }}

	<div class="col-span-1 textH3 text-white p-3">
		{{ next }}
	</div>

	<div class="col-span-7">
		<div class="flex gap-4 items-center">
			<div class="flex-grow">
				{{ form_widget(form.name) }}
			</div>
			<div class="flex">
				<button
						class="icon-btn btn-cancel"
						hx-get="{{ path('app_management_recipe-category') }}">
					<span class="material-symbols-outlined">Cancel</span>
				</button>
				<button class="icon-btn btn-valid">
					<span class="material-symbols-rounded">Save</span>
				</button>
			</div>
		</div>
	</div>

	{{ form_row(form._token) }}
	{{ form_end(form, {render_rest: false}) }}

</form>