<form
		class="bg-darkBg drop-shadow-lg p-2 mb-6 rounded-lg"
		hx-post="{{ path }}"
		hx-target="this"
		hx-swap="outerHTML">

	{{ form_start(form) }}

	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	{{ form_row(form.price) }}
	{{ form_row(form.category) }}

	<div class="flex gap-6 justify-center items-center">
		<button class="btn btn-cancel w-40" hx-get="{{ path('app_management_recipe') }}">
			Annuler
		</button>
		<button class="btn btn-valid w-40">
			Sauvegarder
		</button>
	</div>

	{{ form_row(form._token) }}
	{{ form_end(form, {render_rest: false}) }}

</form>