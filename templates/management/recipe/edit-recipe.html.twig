<form
		class="card"
		hx-post="{{ path }}"
		hx-target="this"
		hx-swap="outerHTML">

	{{ form_start(form) }}

	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	{{ form_row(form.price) }}
	{{ form_row(form.category) }}

	<div class="flex gap-1 md:gap-4 lg:gap-6 justify-center items-center">
		<button class="btn btn-cancel w-40" hx-get="{{ path('app_management_recipe') }}">
			{{ 'button.cancel'|trans }}
		</button>
		<button class="btn btn-valid w-40">
			{{ 'button.save'|trans }}
		</button>
	</div>

	{{ form_row(form._token) }}
	{{ form_end(form, {render_rest: false}) }}

</form>