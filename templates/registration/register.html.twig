{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	<div class="max-w-2xl mx-auto p-8 sm:p-7 md:p-6 lg:p-4">

		<div class="w-fit mx-auto text-center mb-8">
			<span class="material-symbols-rounded title-icon text-textColor">person</span>
			<h1 class="textH1">Register</h1>
		</div>

		<div class="card">

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email, {
				label: 'Email'
			}) }}
			{{ form_row(registrationForm.allowNewsletter) }}
			{{ form_row(registrationForm.plainPassword, {
				label: 'Password'
			}) }}

			<div class="flex w-full justify-center">
				<button type="submit" class="btn">Register</button>
			</div>

			{{ form_end(registrationForm) }}

		</div>

		<div class="mt-3">
			<p>Already have an account,</p>
			<a class="textLink" href="{{ path("app_login") }}">click here</a>
		</div>
	</div>
{% endblock %}
