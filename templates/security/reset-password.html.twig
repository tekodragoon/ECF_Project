{% extends 'base.html.twig' %}

{% block title %}{{ 'title.reset'|trans }}{% endblock %}

{% block body %}

	<div class="max-w-2xl mx-auto p-8 sm:p-7 md:p-6 lg:p-4">

		<div class="w-fit mx-auto text-center mb-8">
			<span class="material-symbols-rounded title-icon text-textColor">person</span>
			<h1 class="textH1">
				{{ 'h1.reset'|trans }}
			</h1>
		</div>

		<div class="card">

			{{ form_start(form) }}
			{{ form_row(form.newPassword) }}
			<div class="flex justify-end items-center">
				<button type="submit" class="btn">
					{{ 'button.modify'|trans }}
				</button>
			</div>
			{{ form_end(form) }}

		</div>

	</div>

{% endblock %}