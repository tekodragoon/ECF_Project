{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto p-8 sm:p-7 md:p-6 lg:p-4">
		<div class="w-fit mx-auto text-center mb-8">
			<span class="material-symbols-outlined title-icon text-textColor">image</span>
			<h1 class="textH1">Galerie</h1>
		</div>
		<div class="grid grid-cols-2 gap-4">
			{% set span = '' %}
			{% for image in images %}
				{% set span = loop.index % 3 == 0 ? 'col-span-2' : '' %}
				<div class="{{ span }} gallery">
					<img class="rounded-xl border-4 border-white gallery"
					     src="{{ asset("build/images/gallery/#{image.name}") }}"
					     alt="{{ image.information }}">
					<span class="absolute text-end max-w-xs top-2 right-2 w-fit bg-darkBg text-lightText p-2 rounded">
						{{ image.information }}
					</span>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
