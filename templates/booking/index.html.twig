{% extends 'base.html.twig' %}

{% block title %}{{ 'title.reservation'|trans }}{% endblock %}

{% block body %}

	<div class="max-w-2xl mx-auto p-8 sm:p-7 md:p-6 lg:p-4">

		<div class="w-fit mx-auto text-center mb-8">
			<span class="material-symbols-rounded title-icon text-textColor">calendar_today</span>
			<h1 class="textH1">{% trans %}h1.reservation{% endtrans %}</h1>
		</div>

		<div class="card text-lightText">

			<div class="flex justify-evenly items-center uppercase mb-4">
				{{ current_date|format_datetime(locale=app.request.locale, pattern="MMMM Y") }}
				<button class="btn"><</button>
				<button class="btn">></button>
			</div>

			{% for i in 0..6 %}
				{% set cur_date = current_date|date_modify("+#{i} day") %}
				<div class="flex justify-evenly items-center mb-4">
					{{ cur_date|format_datetime(locale=app.request.locale, pattern="dd MMMM") }}
					<div>
						<button class="btn">Midi</button>
						<button class="btn">Soir</button>
					</div>
				</div>
			{% endfor %}

		</div>

	</div>
{% endblock %}